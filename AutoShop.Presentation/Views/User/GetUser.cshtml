@using AutoShop.Domain.Enum;
@using AutoShop.Domain.Extensions;
@model UserViewModel

<form>
    <div class="row">
        <div class="form-group col-md-2">
            <label asp-for="@Model.Id" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Id" readonly>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Name" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Name" readonly>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Role" class="col-form-label"></label>
            <input class="form-control" id="selectRoleId" value="@Model.Role" readonly/>
        </div>
    </div>
</form>

<style>
    label {
        color: black;
    }
</style>