<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Elite Auto Sales</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" asp-append-version="true" type="text/css" />
    <link href="https://raw.githack.com/ttskch/select2-bootstrap4-theme/master/dist/select2-bootstrap4.css" rel="stylesheet" asp-append-version="true" type="text/css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" type="text/css" />
    <link rel="stylesheet" href="~/css/backImage.css" asp-append-version="true" type="text/css" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" type="text/css" />
    <link rel="stylesheet" href="~/css/paragraph.css" asp-append-version="true" type="text/css" />
    <link rel="stylesheet" href="~/css/card.css" asp-append-version="true" type="text/css" />
    <link rel="stylesheet" href="~/css/label.css" asp-append-version="true" type="text/css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css" asp-append-version="true">
</head>
<body class="backgroundImage">
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color: white;">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <span style="color:black; font-family:Impact; font-size:30px; background-color:white; border-radius:10px;">
                    Elite Auto Sales
                </span>@*<img src="~/Img/LSKIcon.jpg" style="width:30px; height: 30px; border-radius: 10px;">*@
            </a>
            <button class="navbar-toggler badge-light" style="border-radius:10px;" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-down-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm4 4a.5.5 0 0 0-.374.832l4 4.5a.5.5 0 0 0 .748 0l4-4.5A.5.5 0 0 0 12 6H4z" />
                </svg>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    @{
                        if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle paragraphLayout active text-black" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-family:'Comic Sans MS'; font-weight: bold;">
                                    Account
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <ul class="nav flex-column paragraphHome">
                                                    <li class="nav-item text-center">
                                                        <a class="nav-link active text-white" asp-controller="Account" asp-action="Register">
                                                            Registration
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link active text-white" asp-controller="Account" asp-action="Login">
                                                            Log in
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }

                        if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link paragraphLayout active text-black" asp-controller="Car" asp-action="GetCars" style="font-family:'Comic Sans MS'; font-weight: bold; font-size: 20px">
                                    Vehicle
                                </a>
                            </li>
                        }

                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle paragraphLayout active text-black" href="#" data-toggle="dropdown" style="font-family:'Comic Sans MS'; font-weight: bold; font-size: 20px">
                                    Admin
                                </a>
                                <div class="dropdown-menu">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <ul class="nav flex-column paragraphHome">
                                                    <li class="nav-item text-center">
                                                        <a class="nav-link active text-white" asp-controller="Car" asp-action="Save">
                                                            Addition
                                                        </a>
                                                    </li>
                                                    <li class="nav-item text-center">
                                                        <a class="nav-link active text-white" asp-controller="User" asp-action="Details">
                                                            Users
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>

                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Profile" asp-action="ProfileInfo">
                            <svg style="color: black;" xmlns="http://www.w3.org/2000/svg" width="44" height="44" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                            </svg>
                        </a>

                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <input class="btn btn-danger rounded" style="font-family:'Comic Sans MS'; font-weight: bold; font-size:20px;" type="submit" value="Exit" />
                        </form>
                    }
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @*  <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2023 - Elite Auto Sales Company - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>*@
    <div class="modal fade" id="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Information</h5>
                </div>
                <div class="modal-body">
                    @*   Information*@
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-close btn-secondary" data-bs-dismiss="modal"></button>
                    @{
                        if (User.IsInRole("Admin"))
                        {
                            <button type="button" class="btn btn-primary" id="saveBtn">Save</button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js" asp-append-version="true"></script>
    <script src="~/js/modal.js" asp-append-version="true"></script>
    @await RenderSectionAsync("pageScripts", required: false)
</body>
</html>